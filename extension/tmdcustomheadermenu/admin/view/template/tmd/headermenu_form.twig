{{ header }}{{ column_left }}
<div id="content">
<div class="page-header">
<div class="container-fluid">
	<div class="float-end">
	<button type="submit" form="form-headermenu" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
	<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
	</div>
<h1>{{ heading_title }}</h1>
 <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
</div>
</div>
<div class="container-fluid">
	<div class="card">
	<h3 class="card-header"><i class="fas fa-pencil-alt"></i> {{ heading_title }}</h3>
	<div class="card-body">
	<form id="form-headermenu" action="{{ save }}" method="post" data-oc-toggle="ajax">
	
	 <ul class="nav nav-tabs">
	 <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ tab_general }}</a></li>
	 </ul>
	 
	 <div class="tab-content">
	 <div id="tab-general" class="tab-pane active">
	<ul class="nav nav-tabs" id="language">
	{% for language in languages %}
    <li class="nav-item"><a href="#language-{{ language.language_id }}" data-bs-toggle="tab" class="nav-link{% if loop.first %} active{% endif %}"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/> {{ language.name }}</a></li>
    {% endfor %}
	</ul>
	<div class="tab-content">
	{% for language in languages %}
	 <div id="language-{{ language.language_id }}" class="tab-pane{% if loop.first %} active{% endif %}">
	<div class="row mb-3 required">
	<label for="input-title-{{ language.language_id }}" class="col-sm-2 col-form-label">{{ entry_title }}</label>
	<div class="col-sm-10">
	<input type="text" name="headermenu_description[{{ language.language_id }}][title]" value="{{ headermenu_description[language.language_id] ? headermenu_description[language.language_id].title }}" placeholder="{{ entry_title }}" id="input-title-{{ language.language_id }}" class="form-control"/>
	<div id="error-title-{{ language.language_id }}" class="invalid-feedback"></div>
     </div>
     </div>
	 <div class="row mb-3">
	<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_link }}</label>
<div class="col-sm-10">
	<input type="text" name="headermenu_description[{{ language.language_id }}][link]" value="{{ headermenu_description[language.language_id] ? headermenu_description[language.language_id].link }}" placeholder="{{ entry_link }}" id="input-link" class="form-control"/>
	</div>
	</div>
    </div>
	{% endfor %} 
	
	<div class="row mb-3">
	<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_level1 }}</label>
	<div class="col-sm-10">
	<select class="form-control" name="level1" >
	<option value="">{{ text_select }} </option> 
	{% if headermenu %}
	{% for menu in headermenu %}
	{% if menu.headermenu_id  == level1 %}
	<option  value="{{ menu.headermenu_id }}" selected="selected">
	{% else %}
	<option  value="{{ menu.headermenu_id }}">
	{% endif %}
	{{ menu.title }}</option> 
	{% endfor %}
	{% endif %}
	</select>
	</div>
	</div>
	<div class="row mb-3">
	<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_level2 }}</label>
	<div class="col-sm-10">
	<select class="form-control" name="level2" >
	<option value="">{{ text_select }} </option> 
	{% if headermenu1 %}
	{% for menu in headermenu1 %}
	{% if menu.headermenu_id  == level2 %}
	<option value="{{ menu.headermenu_id }}" selected="selected">
	{% else %}
	<option  value="{{ menu.headermenu_id }}">
	{% endif %}
	{{ menu.title }}
	</option> 
	{% endfor %}
	{% endif %}
	</select>
	</div>
	</div>
	<div class="row mb-3">
	<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_column }}</label>
	<div class="col-sm-10">
	 <input type="text" name="column" value="{{ column }}" placeholder="{{ entry_column }}" id="input-sort-order" class="form-control"/>
	</div>
	</div>
	<div class="row mb-3">
	<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_status }}</label>
	<div class="col-sm-10">
	<select class="form-control" name="status">
	{% if status %}
	<option value="1" selected="selected">{{ text_enabled }}</option>
	<option value="0">{{ text_disabled }}</option>
	{% else %}
	<option value="1">{{ text_enabled }}</option>
	<option value="0" selected="selected">{{ text_disabled }}</option>
	{% endif %}
	</select>				
	</div>
	</div>
	<div class="row mb-3">
	<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
	<div class="col-sm-10">
	<input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
	</div>
	</div>
	</div>
	</div>
	</div>
	<input type="hidden" name="headermenu_id" value="{{ headermenu_id }}" id="input-headermenu-id"/>
	</form>
	</div>
</div>
</div>

{{ footer }}