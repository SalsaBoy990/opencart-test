{{ header }}{{ column_left }}


<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a href="{{ back_url }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i>{{ back }}</a>
            </div>

            <h1>{{ contact_show_heading_title }}</h1>

            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item active"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>

    <div class="container-fluid mb-5">

        <div class="card">
            <div class="card-header">
                <h3 class="h5 fw-bold">{{ contact.name }}</h3>
            </div>
            <div class="card-body">

                <strong>Submitted date: {{ contact.submitted_date }}</strong>
                <p class="text-muted">GDPR accepted: {{ contact.gdpr }}</p>

                <div class="form-group mb-3">
                    <label for="name">Name:</label>
                    <input type="text" id="name" class="form-control" disabled readonly value="{{ contact.name }}">
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email:</label>
                    <input type="text" id="email" class="form-control" disabled readonly value="{{ contact.email }}">
                </div>
                <div class="form-group mb-3">
                    <label for="message">Message:</label>
                    <textarea readonly class="form-control" disabled rows="10" id="message">{{ contact.message }}</textarea>
                </div>

            </div>


        </div>
    </div>

</div>

